# =============================================================================
# Docker Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# Solana Configuration
# =============================================================================

# Solana RPC URL
# Options:
#   - Devnet: https://api.devnet.solana.com
#   - Mainnet: https://api.mainnet-beta.solana.com
#   - Local: http://solana-validator:8899 (when using local validator)
SOLANA_RPC_URL=https://api.devnet.solana.com

# =============================================================================
# Wallet Configuration
# =============================================================================

# Base64 encoded private key of the devnet account
# Generate with: solana-keygen new --no-passphrase --outfile keypair.json
# Then encode: base64 -w 0 keypair.json
PRIVATE_KEY=

# =============================================================================
# Program IDs
# =============================================================================

# Solana Game Program ID (deployed poker game contract)
PROGRAM_ID=

# Proof Verifier Program IDs (deployed via Sunspot)
VERIFY_SHUFFLE_PROGRAM_ID=
VERIFY_COMMUNITY_PROGRAM_ID=
VERIFY_REVEAL_PROGRAM_ID=

# =============================================================================
# Application Configuration
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Server port (internal to container)
PORT=3000
